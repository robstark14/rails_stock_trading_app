<%= form_with scope: :portfolio, url: confirm_sell_portfolio_path(@portfolio), method: :patch do |form| %>
  <% if @portfolio.errors.any? %>
    <% @portfolio.errors.each do |error| %>

      <div>
        <div class="alert alert-danger alert-dismissible fade show mx-auto col-10 text-center mb-1 mt-4" role="alert">
          <%= error.full_message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    
    <% end %>
  <% end %>

  <div>
    <section class = "col-8 mx-auto">
      <div class = "mt-5">
        <div class="p-4 p-sm-5">

          <div class="mb-3">
            <%= form.label :stock_symbol %>
            <%= form.text_field :stock_symbol%>
          </div>

          <div class="mb-3">
            <%= form.label :sell_quantity %>
            <%= form.number_field :quantity, step: :any, :min => 0.01 %>
          </div>

          <div class="d-grid mb-3 mt-4">
            <%= form.submit "Sell stock", class: "rounded p-2 m-4 bg-green-600 text-white hover:cursor-pointer"%>
          </div>

        </div>
      </div>
    </section>
  </div>

<% end %>