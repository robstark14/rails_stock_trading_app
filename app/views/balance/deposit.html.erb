<%= form_with scope: :user, url: confirm_deposit_balance_path(@user), method: :patch do |form| %>
  <% if @user.errors.any? %>
    <% @user.errors.each do |error| %>

      <div class="container">
        <div class="alert alert-danger alert-dismissible fade show mx-auto col-10 text-center mb-1 mt-4" role="alert">
          <%= error.full_message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    
    <% end %>
  <% end %>

  <div>
    <section class = "col-8 mx-auto">
      <div class = "rounded-3 mt-5">
        <div class=" p-4 p-sm-5">

          <div class=" mb-3">
            <%= form.label :top_up_amount %>
            <%= form.number_field :balance, step: :any, :min => 0.01, :class => "form-control" %>
          </div>

          <div class="d-grid mb-3 mt-4">
            <%= form.submit "deposit", :class => "btn btn-primary btn-login text-uppercase fw-bold"%>
          </div>

        </div>
      </div>
    </section>
  </div>

<% end %>