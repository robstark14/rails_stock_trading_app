<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Blue Chip Stocks</h1>
    <%# <%= link_to 'New stock', new_stock_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
<div class="mx-auto mt-4 shadow mb-5 bg-body rounded w-[80%]">
    <div class="d-flex justify-content-evenly bg-dark text-light">
    </div>
    
    <div class="overflow-auto scroll text-center" >
        <table class="mx-auto" style="width:90%;">
            <thead class="position-sticky top-0 bg-white">

                <tr >
                    <th class="p-2"></th>
                    <th class="p-2">Symbol</th>
                    <th class="p-2">Change</th>
                    <th class="p-2">Price</th>
                </tr>

            </thead>

            <tbody class="mt-3 text-center">
                <% @stocks.each_with_index do | stock, index | %>
                                
                    <tr>
                        <td class="ps-2">
                            <%= index + 1%>
                        </td>
                                   
                        <td>
                            <%= link_to stock_path(stock.id), class: "btn btn-outline-light text-dark w-100 text-start fw-bold ps-2" do%>
                                <%= stock.stock_symbol %>
                            <%end%>
                            <p  style="--bs-text-opacity: .65;">
                                <%= stock.comp_name%>
                            </p>
                        </td>
                        <td>
                            <% if stock.access_quote.change_percent_s.include? "-" %>
                                <p class="w-100 text-start ps-2 fw-bold text-red-700" >
                                    <%= stock.access_quote.change_percent_s %>
                                </p>
                            <% else %>
                                <p class="w-100 text-start ps-2 fw-bold text-green-700" >
                                        <%= stock.access_quote.change_percent_s %>
                                </p>
                            <% end %>
                        </td>
                        <td>
                            <p class="text-dark w-100 text-start ps-2 fw-bold" >
                                <%= stock.access_quote.latest_price%>
                            </p>
                        </td>  
                    </tr>
                   
                <% end %>
            </tbody>         
        </table>        
    </div>
</div>
</div>
