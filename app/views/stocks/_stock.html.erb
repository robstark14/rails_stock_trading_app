<div id="<%= dom_id stock %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Comp name:</strong>
    <%= stock.comp_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Stock symbol:</strong>
    <%= stock.stock_symbol %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Comp description:</strong>
    <%= stock.comp_description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this stock", stock, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this stock', edit_stock_path(stock), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
