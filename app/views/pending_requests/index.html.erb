
<div class="cmx-auto mt-5">
  <div class="flex justify-between">
    <h1 class="text-4xl font-bold">Trader Requests</h1>
    
    <%= link_to "Declined Requests",  declined_requests_path, class:"mx-2 p-2 bg-slate-500 rounded text-white"%>
 
  </div>
  <ul class="overflow-auto container" style="min-height: 20rem; max-height: 35rem;">
    <% if @request.empty? %>
      <h4 class="text-center mt-5"> There is currently no request yet.</h4>
    <% end %>
    <% @request.each do |request| %>
      <li class="flex justify-content-between p-3 row">
    
        <%= link_to  request.email, user_path(request), class: "text-dark col"%>       
  
        <div class="text-center col text-white">

          <%= link_to "Decline", pending_request_path(request, request: {state: "Declined"}), method: :patch, class: "mx-2 p-2 bg-red-700 rounded" %>
          <%= link_to "Approve", pending_request_path(request, request: {state: "Approved"}), method: :patch, class: "mx-2 p-2 bg-green-700 rounded" %>
          
        </div>
      </li>
    <% end %>
  </ul>
</div>